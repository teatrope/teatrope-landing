---
const {index, t, imgpath, imgalt} = Astro.props;

const item = t?.section?.reviews?.items;
---
<div class="review-card">
    <div class="review-description">{item[index].review}</div>
    <div class="review-contact-container">
        <div class="img-wrapper">
            <img src={imgpath} alt={imgalt}/>
        </div>
        <div class="review-contact">
            <p class="review-name">{item[index].name}</p>
            <p class="review-job">{item[index].position}</p>
        </div>
    </div>
</div>

<style>
    .review-card {
        flex: 1 1 250px;
        max-width: 400px;
        background: var(--bg-color);
        padding: 20px;
        border-radius: 5px;
        color: var(--text-color);
    }

    .review-contact-container{
        display: flex;
        flex-wrap: wrap;
    }

    .review-description {
        font-size: 14px;
        line-height: 1.4;
        padding-bottom: 20px;
    }

    img{
        width: 64px;
        height: 64px;
        border-radius: 50%;
        object-fit: cover;
    }

    .img-wrapper{
        padding-right: 20px;
        border-radius: 100%;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .review-name{
        font-size: 14px;
        font-weight: bold;
    }

    .review-job{
        color: var(--text-blue);
    }

</style>